<p>
  <h2>Тест: <%= @test.title %> | Уровень: <%= @test.level %></h2>
</p>

<p>
  <strong>Описание:</strong>
  <%= @test.description %>
</p>

<table>
  <tr>
    <td><h3>Вопросы</h3></td>
    <td colspan="2"><h3>ДействияActions</h3></td>
  </tr>
  <% @test.questions.each do |question| %>
    <tr>
      <td><%= question.body %></td>
      <td><%= link_to 'Смотреть', question_path(question) %></td>
      <td><%= link_to 'Редактировать', edit_question_path(question) %></td>
      <td><%= link_to 'Удалить', question_path(question), method: :delete, data: {confirm: "Вы согласны?"} %></td>
    </tr>
  <% end %>
</table>

<p>
<%= link_to 'Редактировать', edit_test_path(@test) %> |
<%= link_to 'Назад', tests_path %> |
<%= link_to 'Добавить вопрос', new_test_question_path(@test) %>
</p>
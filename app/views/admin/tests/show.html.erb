<p>
  <h2>Test: <%= @test.title %> | Level: <%= @test.level %></h2>
</p>

<p>
  <strong>Description:</strong>
  <%= @test.description %>
</p>

<p><h3><%= link_to 'New question', new_admin_test_question_path(@test) %></p></h3>

<table>
  <tr>
    <td><h3>Questions</h3></td>
    <td colspan="2"><h3>Actions</h3></td>
  </tr>
  <% @test.questions.each do |question| %>
    <tr>
      <td><%= link_to question.body, admin_question_path(question) %></td>
      <td><%= link_to 'Edit', edit_admin_question_path(question) %></td>
      <td><%= link_to 'Delete', admin_question_path(question), method: :delete, data: {confirm: "Are you sure?"} %></td>
    </tr>
  <% end %>
</table>

<p>
<%= link_to 'Edit', edit_admin_test_path(@test) %> |
<%= link_to 'Back', admin_tests_path %>
</p>
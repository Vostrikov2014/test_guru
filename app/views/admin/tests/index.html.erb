<div class="row justify-content-center mt-3">
  <div class="col col-md-8">

    <h1 class="mb-4 mt-4"><%= t('.header') %></h1>

    <%= render 'shared/errors', resources: @test %>

    <p>
    <h3><%= link_to t('.new_test'), new_admin_test_path %></h3>
    </p>

    <table class="table">
      <tr>
        <th class="sort-by-title pointer">
        <%= t('.title') %>
        <%= octicon 'arrow-up', class: 'text-success hide' %>
        <%= octicon 'arrow-down', class: 'text-success hide' %>
        </th>
        <th><%= t('.level') %></th>
        <th><%= t('.count') %></th>
        <th colspan="3" class="text-center"><%= t('.actions') %></th>
      </tr>

      <%= render @tests %>
    </table>

  </div>
</div>

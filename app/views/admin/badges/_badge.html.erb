<tr align="center">
  <td><%= badge.title %></td>
  <td><%= badge.image_path %></td>
  <td><%= badge.rule %></td>
  <td><%= badge.value %></td>
  <td><%= link_to t('.show'), admin_badge_path(badge) %></td>
  <td><%= link_to t('.edit'), edit_admin_badge_path(badge) %></td>
  <td><%= link_to t('.delete'), admin_badge_path(badge),
                  method: :delete,
                  data: { confirm: t('.are_you_sure') } %></td>
</tr>

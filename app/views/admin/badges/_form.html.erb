<%= form_with model: [:admin, @badge], local: true do |form| %>
  <%= render 'shared/errors', resources: @badge %>

  <p>
    <%= form.label :title %>
    <%= form.text_field :title, id: :badge_title %>
  </p>

  <p>
    <%= form.label :image %>
    <%= form.text_field :image_path, id: :badge_image %>
  </p>

  <p>
    <%= form.label :rule %>
    <%= form.text_field :rule, id: :badge_rule %>
  </p>

  <p>
    <%= form.label :value %>
    <%= form.text_field :value, id: :badge_value %>
  </p>

  <p><%= form.submit %></p>

<% end %>

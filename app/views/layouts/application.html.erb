<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <h1><%= link_to 'Тест Гуру', tests_path %></h1>

    <% if logged_in? %>
      <p class="nav user">
        Привет! <b><%= current_user.email %></b> | <%= link_to 'Выйти', logout_path %>
      </p>
    <% else %>
      <p class="nav user">
        <%= link_to 'Войти', login_path %> | <%= link_to 'Зарегистрироваться', signup_path %>
      </p>
    <% end %>

    <%= yield %>
    <%= render 'layouts/footer' %>
  </body>

</html>
